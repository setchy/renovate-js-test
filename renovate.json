{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableRateLimiting",
    ":separateMultipleMajorReleases"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "node"
      ],
      "matchPackagePatterns": [
        "/node$"
      ],
      "ignoreUnstable": false,
      "allowedVersions": "/^v?(16|18)(\\.[0-9]+){0,2}/"
    }
  ]
}