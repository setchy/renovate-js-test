{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":prHourlyLimitNone",
    ":separateMultipleMajorReleases"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "node"
      ],
      "ignoreUnstable": true,
      "allowedVersions": "/^(16|18)(\\.[0-9]+)?(\\.[0-9]+)?/"
    }
  ]
}